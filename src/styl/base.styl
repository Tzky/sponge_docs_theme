body
  background #f3f2f0
  margin 0


.container
  center(1080px)
  background #fff
  border-bottom 3px solid #e4e4e4
  padding 20px
  margin-top 20px
  margin-bottom 20px
  box-shadow 0 0 2px rgba(0, 0, 0, 0.05)

a
  color #2980B9
  text-decoration none

  &:visited
    //color #9B59B6
    color #2980B9

.related
  padding 12px 0

  ul
    font-size 14px
    padding-left 0 !important

  .lights
    cursor pointer
    color #a4b6ce
    background-color #edf4fc
    padding 8px
    border-bottom 2px solid #d7e5f2
    position relative
    top -7px
    border-radius 4px

    &:hover
      background-color #dae1e9

div.document
  column(2/3)
  line-height 1.7em
  visibility hidden
  margin-bottom 30px

div.sphinxsidebarwrapper
  padding 8px

div.sphinxsidebar
  margin-left 0
  margin-right 0 !important
  font-size 13px
  line-height 1.5em
  column(1/3)


  ul
    margin 0
    padding 0
    list-style none !important

    ul
      margin 0 0 0 12px


  .toctree-l2
    display none

  li.current

    &>a
      font-weight bold

  .toctree-l1.current
    display list-item

    & .toctree-l2
      display list-item

  h3
  h4
    margin 8px 0

div.related
  cf()
  clear both
  width auto

  &:first-child
    margin 0 -20px 12px -20px
    padding 10px 30px
    border-bottom 1px solid #ddd

  .lights-icon
    height 15px
    width 15px
    font-size 14px

  #copyright
    float left

html
  font-family Roboto, sans-serif
  font-size 14px
  color #474a54

p
  margin 0 0 10px 0

.highlight
  border none
  border-left-width 4px
  border-left-style solid
  margin-bottom 10px
  font-family 'Source Code Pro', monospace

  pre
    font-family 'Source Code Pro', monospace
    white-space pre-wrap
    white-space -moz-pre-wrap
    white-space -pre-wrap
    white-space -o-pre-wrap
    word-wrap break-word

pre
  padding 12px
  font-size 13px
  line-height normal
  border-radius 4px
  margin 0

.docutils.literal
  background-color #f5f5f5
  font-size 13px
  padding 4px
  border-radius 2px
